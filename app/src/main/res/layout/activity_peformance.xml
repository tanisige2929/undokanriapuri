<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PeformanceActivity">

    <TextView
        android:id="@+id/jissekimessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jissekimessage"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/jissekinen"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jissekinen"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/jissekituki"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jissekituki"
            android:textSize="25sp" />

        <Button
            android:id="@+id/kensaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kensaku"
            android:layout_marginLeft="32dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/nengetu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/jissekikeikoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jissekikeikoku"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/jissekilist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>