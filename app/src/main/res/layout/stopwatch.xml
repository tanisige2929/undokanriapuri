<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/swcount"
            android:layout_width="408dp"
            android:layout_height="154dp"
            android:text="00:00.00"
            android:textAlignment="center"
            android:textSize="90sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.481" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="372dp"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/ToDo"
                android:layout_width="124dp"
                android:layout_height="55dp"
                app:srcCompat="@android:drawable/btn_star" />

            <ImageButton
                android:id="@+id/calendar"
                android:layout_width="124dp"
                android:layout_height="55dp"
                app:srcCompat="@android:drawable/btn_star" />

            <ImageButton
                android:id="@+id/count"
                android:layout_width="124dp"
                android:layout_height="55dp"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>

        <Button
            android:id="@+id/swreset"
            android:layout_width="140dp"
            android:layout_height="64dp"
            android:text="@string/reset"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@+id/swstartorstop"
            app:layout_constraintTop_toBottomOf="@+id/swcount"
            app:layout_constraintVertical_bias="0.282" />

        <Button
            android:id="@+id/swstartorstop"
            android:layout_width="140dp"
            android:layout_height="64dp"
            android:text="@string/start"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/swreset"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swcount"
            app:layout_constraintVertical_bias="0.279" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>